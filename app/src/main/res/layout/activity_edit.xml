<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lpf8090y.myapplication.MainActivity" >

    <RelativeLayout
        android:id="@+id/relativelayout_edit_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white" >

        <RelativeLayout
            android:id="@+id/relativelayout_edit_back"
            android:layout_width="38dp"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:background="@drawable/back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/accountsafe"
            android:textSize="17sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativelayout_edit_top" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >




            <RelativeLayout
                android:id="@+id/relativelayout_edit_setusername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white" >

                <ImageView
                    android:id="@+id/textview_edit_setusernamepic"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/setusername" />

                <TextView
                    android:id="@+id/textview_edit_setusernametv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/textview_edit_setusernamepic"
                    android:text="修改资料"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/torightgray" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/relativelayout_edit_setpassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white" >

                <ImageView
                    android:id="@+id/textview_edit_setpasswordpic"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/setpassword" />

                <TextView
                    android:id="@+id/textview_edit_setpasswordtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/textview_edit_setpasswordpic"
                    android:text="修改密码"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/torightgray" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>